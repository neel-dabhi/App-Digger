<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:background="@drawable/rounded_dialog"
    android:layout_marginTop="@dimen/dp_8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageviewBottomSheet"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_bottom_sheet_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:fontFamily="@font/roboto_mono_bold"
        android:gravity="center"
        android:text="@string/bottom_sheet_option_heading"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/extract_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/dp_16"
        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/ic_extract"
        android:drawablePadding="@dimen/dp_32"
        android:drawableTint="@color/fontColor"
        android:fontFamily="@font/roboto_mono"
        android:gravity="start|center_vertical"
        android:text="Extract Apk"
        android:textColor="@color/fontColor"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/openInGoogle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/dp_16"
        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/google_play"
        android:drawablePadding="@dimen/dp_32"
        android:drawableTint="@color/fontColor"
        android:fontFamily="@font/roboto_mono"
        android:gravity="start|center_vertical"
        android:text="Find on Google Play Store"
        android:textColor="@color/fontColor"
        android:textSize="16sp" />






    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/ic_round_cancel_24px"
        android:drawablePadding="@dimen/dp_32"
        android:drawableTint="@color/fontColor"
        android:fontFamily="@font/roboto_mono"
        android:gravity="start|center_vertical"
        android:text="@android:string/cancel"
        android:textColor="@color/fontColor"
        android:textSize="16sp" />

</LinearLayout>